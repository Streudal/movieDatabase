<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:id="@+id/pt_username"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="13dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/pt_username"
        android:inputType="textPersonName"
        android:text="@string/pt_username" />

    <EditText
        android:id="@+id/pt_password"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/pt_username"
        android:layout_alignParentTop="true"
        android:layout_marginTop="68dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/pt_password"
        android:inputType="textPersonName|textPassword"
        android:text="@string/pt_password" />

</RelativeLayout>